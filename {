const express = require('express'); const path = require('path'); require('dotenv').config(); const app = express(); app.use((req, res, next) = console.log(`${new Date().toISOString()} - ${req.method} ${req.url}`); next(); }); app.use(express.json()); app.use((req, res, next) = res.setHeader('Access-Control-Allow-Origin', '*'); res.setHeader('Access-Control-Allow-Methods', 'GET, POST, OPTIONS'); res.setHeader('Access-Control-Allow-Headers', 'Content-Type'); next(); }); app.get('/students/student-dashboard', (req, res) = res.sendFile(path.join(__dirname, 'students', 'student-dashboard.html')); }); app.get('/students/news-feed', (req, res) = res.sendFile(path.join(__dirname, 'students', 'news-feed.html')); }); app.use('/assets', express.static(path.join(__dirname, 'assets'))); app.use('/students', express.static(path.join(__dirname, 'students'))); app.get('/api/news', async (req, res) = try { const news = [{ title: 'Educational Updates', description: 'Latest in education', source: 'EduTech Weekly', publishedAt: new Date().toLocaleDateString() }]; res.json({ news }); } catch (error) { res.status(500).json({ error: 'Failed to fetch news' }); } }); app.use((req, res) = res.status(404).send('Page not found'); }); const PORT = process.env.PORT 
