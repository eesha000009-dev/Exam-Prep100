rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users may read/write their own profile documents only
    match /students/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User activities: only the owning user can access their documents
    match /student_activities/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Notifications: only the intended recipient can read; writes disabled for clients
    match /notifications/{notificationId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create, update, delete: if false; // Only backend functions can write notifications
    }

    // Remove open test endpoints - require auth (developer/testing only)
    match /test_access/{document} {
      allow read: if request.auth != null && request.auth.uid != null;
    }
    
    // Default deny: explicitly allow only the matches above
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
